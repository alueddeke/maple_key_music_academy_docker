# Production Environment Configuration for Maple Key Music Academy
# Copy this file to env.prod and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database settings for production
POSTGRES_DB=maple_key_prod
POSTGRES_USER=maple_key_user
POSTGRES_PASSWORD=your_secure_production_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
# Django settings for production
SECRET_KEY=your-secure-django-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database URL for Django (alternative format)
DATABASE_URL=postgresql://maple_key_user:your_secure_production_password_here@db:5432/maple_key_prod

# =============================================================================
# DJANGO ALLAUTH CONFIGURATION
# =============================================================================
# Google OAuth settings (get these from Google Cloud Console)
GOOGLE_CLIENT_ID=your-production-google-client-id-here
GOOGLE_CLIENT_SECRET=your-production-google-client-secret-here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Vite/React environment variables
VITE_API_URL=https://your-domain.com/api
VITE_APP_NAME=Maple Key Music Academy
VITE_APP_ENV=production

# =============================================================================
# PRODUCTION FLAGS
# =============================================================================
# Flags for production environment
USE_DOCKER=True
ENABLE_DEBUG_TOOLBAR=False
ENABLE_HOT_RELOADING=False

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Additional security settings for production
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True


